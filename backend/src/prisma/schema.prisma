generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String          @id                @default(uuid())
  name        String         
  email       String          @unique         
  password    String                    
}

model Category {
  id         String           @id                @default(uuid())
  type       CategoryType     @default(MOVIE)
  title     String?
}

enum CategoryType {
  MOVIE
  SERIE
}
    
model Log {
  id          String           @id               @default(uuid())
}

model Video {         
  id          String          @id                @default(uuid())
  url         String          
  hlsUrl      String?
  status      VideoStatus     @default(PENDING)
}

enum VideoStatus {
  PENDING
  QUEUED
  SUCCEED
}